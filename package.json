{
  "name": "better-deposits",
  "version": "0.0.0",
  "description": "Monorepo for Better Deposits",
  "main": "index.js",
  "repository": "https://github.com/thomas-waite/better-deposits.git",
  "author": "thomas-waite <thomas.waite4@gmail.com>",
  "license": "Unlicensed",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf ./packages/*/node_modules",
    "compile": "tsc -p tsconfig.build.json",
    "test": "yarn wsrun --package $PKG --serial -c test",
    "lint": "yarn wsrun --package $PKG --parallel -c lint",
    "prettier:ci": "yarn prettier && prettier --config .prettierrc --list-different '**/*.{js,jsx,json,md}'",
    "prettier": "prettier --config .prettierrc --write '**/*.{js,jsx,json,md}'"
  },
  "dependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/protocol/",
      "**/protocol/**"
    ]
  },
  "devDependencies": {
    "wsrun": "^5.2.1"
  }
}
